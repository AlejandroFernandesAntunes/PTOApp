= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :rate
    = f.number_field :rate
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
